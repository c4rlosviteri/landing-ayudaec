.Footer
  background $yellow
  margin-top 3.5rem
  padding 1rem 2rem
  position relative
  &-container
    margin-top 4rem
    a
      display block
      text-align center
  &-totop:before
    background $blue
    border-radius 50%
    color white
    content "â–²"
    display block
    font-size 1.5rem
    height 3rem
    left calc(50% - 1.5rem)
    line-height 2.75rem
    text-align center
    position absolute
    top -1.5rem
    width 3rem
  &-links
    margin 1rem 0
    text-decoration none
  &-logo
    display block
    margin 0 auto 1rem auto
    width 12rem
  &-networks
    display flex
    justify-content center
    margin 2.5rem 0
    position relative
    &:after
      background $blue
      content ''
      display block
      height 1px
      left 0
      position absolute
      top 1.5rem
      width 100%
      z-index 1
    a
      z-index 20
      img
        margin 0 .5rem
        max-height 3rem
        max-width 3rem

button(c, t, p)
  background c
  border-bottom .25rem solid darken(c, p)
  border-radius .25rem
  color t
  cursor pointer
  font-size 1.5rem
  display block
  margin 1rem 0
  padding 1rem 0
  transition all .3s ease
  text-align center
  text-decoration none
  text-transform uppercase
  width 100%
  &:hover
    background darken(c, 10%)
    border-bottom .25rem solid darken(c, p+10%)

.button
  button($blue, white, 25%)
  &--yellow
    button($yellow, black, 15%)

input[type="submit"]
  border-left none
  border-right none
  border-top none

input[type="text"], input[type="email"], input[type="password"], textarea
  font-size 14px
  border 1px solid $midgray
  margin .5rem 0
  padding .8rem 1rem

select
  padding 1rem

textarea
  display block
  resize vertical
  width 100%

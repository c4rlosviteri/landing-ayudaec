.Header
  &-hamburger
    padding 2rem 0
    position relative
    transform rotate(0deg)
    transition .5s ease-in-out
    .Header-lines
      background $yellow
      border-radius .25rem
      display block
      height .375rem
      left 0
      opacity 1
      position relative
      transform rotate(0deg)
      transition .25s ease-in-out
      width 2.5rem
      &:nth-child(1)
        top 0
      &:nth-child(2)
        top .375rem
      &:nth-child(3)
        top .75rem
    &.open-hamburger
      background $yellow
      .Header-lines
        background black
        &:nth-child(1)
          top 1rem
          transform rotate(135deg)
        &:nth-child(2)
          opacity 0
          left -60px
        &:nth-child(3)
          top .25rem
          transform rotate(-135deg)
  &-lineswrapper
    position absolute
    right 2rem
    top 1rem
  &-logo-mobile
    display block
    margin 1rem auto 3rem auto
    max-height 200px
    max-width 200px
  &-logo-desktop
    display none
  &-nav
    height 0
    padding 0 2rem 1rem 1rem
    transform scale(0)
    transition .3s ease-in-out
    ul
      padding 0
      margin 0
      li
        border-bottom 1px solid white
        list-style none
        padding 1rem
        text-align center
        &:last-child
          border-bottom 0
        a
          color inherit
          text-decoration none
    &.nav-open
      background $yellow
      display block
      height auto
      transform scale(1)

@media (min-width: 1024px)
  .Header
    &-hamburger
      display none
    &-logo-mobile
      display none
    &-logo-desktop
      display block
      height 60px
      margin-top .25rem
    &-maininfo
      height 100px
      order -1
      padding 1.25rem 0
    &-nav
      display block
      height 120px
      opacity 1
      transform translate(0, 0)
    &-wrapper
      display flex
      margin 0 auto
      max-width 960px
      justify-content space-between
      ul
        li
          border-bottom 0
          display inline-block
          line-height 110px
          margin-right 2rem
          padding 0
          text-transform lowercase
          transition all .3s ease
          &:hover
            color $blue
          &:last-child
            margin-right 0
